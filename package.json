{
	"name": "css-generator",
	"displayName": "css-generator",
	"description": "Шняга, сделанная при поддержке Якидана",
	"version": "0.0.1",
    "publisher": "hehe",
	"engines": {
		"vscode": "^1.55.0"
	},
    "repository": {
		"url": "https://github.com/loveuloveme/css-generator-extension.git",
		"type": "git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:css-generator.openEditor",
		"onLanguage:css",
		"onLanguage:scss"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "css-generator-sidebar-view",
					"title": "CSS generator",
					"icon": "media/terminal-linux.svg"
				}
			]
		},
		"views": {
			"css-generator-sidebar-view": [
				{
					"type": "webview",
					"id": "css-generator-sidebar-view",
					"name": "",
					"icon": "media/terminal-linux.svg",
					"contextualTitle": ""
				}
			]
		},
		"commands": [
			{
				"command": "css-generator.openEditor",
				"title": "Make/Edit gradient"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == css || resourceLangId == scss",
					"command": "css-generator.openEditor",
					"group": "YourGroup@1"
				}
			]
		}
	},
	"scripts": {
        "build": "vsce package --out build.vsix"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"esbuild": "^0.11.15",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.35.1",
		"webpack-cli": "^4.6.0"
	}
}
