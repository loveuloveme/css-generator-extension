{
	"name": "css-generator",
	"displayName": "css-generator",
	"description": "CSS gradient generator",
	"version": "0.0.1",
    "icon": "./media/icon.png",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:css-generator.openEditor",
        "onLanguage:css",
        "onLanguage:scss"
	],
	"main": "./extension.js",
	"contributes": {
        "viewsContainers": {
            "activitybar": [
              {
                "id": "vstodo-sidebar-view",
                "title": "VSTodo",
                "icon": "media/terminal-linux.svg"
              }
            ]
          },
          "views": {
            "vstodo-sidebar-view": [
              {
                "type": "webview",
                "id": "vstodo-sidebar",
                "name": "VSTodo",
                "icon": "media/terminal-linux.svg",
                "contextualTitle": "VSTodo"
              }
            ]
        },
		"commands": [
            {
				"command": "css-generator.openEditor",
				"title": "Make CSS gradient"
			}
		],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == css || resourceLangId == scss",
                    "command": "css-generator.openEditor",
                    "group": "YourGroup@1"
                }
            ]
        }
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
